<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/user_avatar_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:tint="@color/colorAccentDark"
            android:tintMode="screen" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@android:color/black" />

        <zerobase.us.gitprofile.views.RoundedImageView
            android:id="@+id/user_avatar_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:elevation="6dp"
            android:transitionName="profile_avatar" />

        <TextView
            android:id="@+id/user_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="login"
            android:textColor="@color/colorTextGrey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_login_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="login"
            android:textColor="@color/colorTextGrey"
            android:textSize="14sp" />

        <View
            android:id="@+id/user_details_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/user_name_text_view"
            android:layout_marginTop="12dp"
            android:background="@color/colorUserProfileDivider" />

        <LinearLayout
            android:id="@+id/user_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_details_divider"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/user_followers_details_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/user_followers_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_followers_count_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="followers"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorUserProfileDivider" />

            <RelativeLayout
                android:id="@+id/user_following_details_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/user_following_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_following_count_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="following"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorUserProfileDivider" />

            <RelativeLayout
                android:id="@+id/user_repository_details_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/user_repository_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_repository_count_text_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="repositories"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/user_location_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_location_icon"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/user_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="location" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_email_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_location_details_layout"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_email_icon"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/user_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="email@emailprovider.com" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>


